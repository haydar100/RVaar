<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/v7_toolbar" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80cbd3d9"
                android:textColor="#2b4c66"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dip"
                android:textSize="15dp"
                android:text="@string/Rijkswaterstaat" />

            <LinearLayout
                android:id="@+id/panel1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:src="@drawable/rwslogo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:text="@string/Rijkswaterstaattext" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="@string/Rijkswaterstaattel1"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80cbd3d9"
                android:textColor="#2b4c66"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dip"
                android:textSize="15dp"
                android:text="@string/Rijkswaterstaat2" />

            <LinearLayout
                android:id="@+id/panel4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:src="@drawable/rwslogo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:text="@string/Rijkswaterstaattext2" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="@string/Rijkswaterstaattel2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80cbd3d9"
                android:textColor="#2b4c66"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="10dip"
                android:textSize="15dp"
                android:text="@string/Politie" />

            <LinearLayout
                android:id="@+id/panel2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:src="@drawable/politielogo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:text="@string/Politietext" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="@string/Politietel"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#80cbd3d9"
                android:textColor="#2b4c66"
                android:gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="10dip"
                android:text="@string/Rijkswaterstaatcentraal" />

            <LinearLayout
                android:id="@+id/panel3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:src="@drawable/rwslogo" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:text="@string/Rijkswaterstaatcentraaltext" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dip"
                    android:textColor="#2b4c66"
                    android:padding="5dip"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:gravity="center"
                    android:text="@string/Rijkswaterstaatcentraaltel"/>
            </LinearLayout>
        </LinearLayout>



        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="340dip"
            android:dividerHeight="0px"
            android:drawSelectorOnTop="false"
            android:visibility="gone" />
    </LinearLayout>

    <!-- drawer -->
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFF"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>
