<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_marginTop="20dip"
    android:layout_marginLeft="45dip"
    android:orientation="horizontal"
    tools:context="hu.rijkswaterstaat.rvaar.Home">
    <Button
        android:id="@+id/myButton"
        android:onClick="buttonOnClick"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:background="@null"
        android:text="Landkaart"
        android:drawableTop="@drawable/logo_kaart" />
    <Button
        android:id="@+id/myButton2"
        android:layout_gravity="left|top"
        android:background="@null"
        android:padding="10dp"
        android:onClick=" "
        android:text="Checklist"
        android:drawableTop="@drawable/checklist_logo"/>

    <Button
        android:id="@+id/myButton3"
        android:layout_gravity="left|top"
        android:background="@null"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:onClick=" "
        android:text="Tips &amp; Tricks"
        android:drawableTop="@drawable/tips_logo" />


    <Button
        android:id="@+id/button4"
        android:layout_gravity="left|top"
        android:background="@null"
        android:padding="10dp"
        android:onClick=" "
        android:text="Mijn locaties"
        android:drawableTop="@drawable/locaties_logo"/>

    <Button
        android:id="@+id/button5"
        android:layout_gravity="left|top"
        android:background="@null"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:onClick=" "
        android:text="Settings"
        android:drawableTop="@drawable/settings_logo" />

    <Button
        android:id="@+id/button6"
        android:layout_gravity="left|top"
        android:background="@null"
        android:padding="10dp"
        android:onClick=" "
        android:text="Share"
        android:drawableTop="@drawable/share_logo" />
</GridLayout>




