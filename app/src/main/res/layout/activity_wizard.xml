<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.rijkswaterstaat.rvaar.wizard.Wizard">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pager">

    <Button
        android:onClick="skipWizard"
        android:id="@+id/overslaan"
        android:text="Overslaan"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/pager"
        android:layout_alignLeft="@+id/volgende"
        android:background="@color/white"
        android:textColor="@color/rvaarblue" />

    <Button android:id="@+id/volgende"
        android:layout_weight="0.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/overslaan"
        android:layout_alignBottom="@id/pager"
        android:text="Volgende"
        android:textColor="@color/white"
        android:background="@color/rvaarblue"
        />

    </LinearLayout>

</RelativeLayout>
