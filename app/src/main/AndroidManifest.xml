<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.rijkswaterstaat.rvaar" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".OverviewMap"
            android:label="@string/title_activity_overview_map"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Niveau"
            android:label="@string/title_activity_home"
            android:logo="@drawable/ic_rvaar"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".AccordianSampleActivity"
            android:label="@string/title_activity_about_us"
            android:logo="@drawable/ic_rvaar"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".utils.PreferencesActivity"
            android:label="@string/Instellingen"
            android:logo="@drawable/ic_rvaar"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".Checklist"
            android:label="@string/title_activity_checklist"
            android:logo="@drawable/ic_rvaar"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"/>
        <activity
            android:name=".Quiz"
            android:label="@string/title_activity_quiz"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".Result"
            android:label="@string/title_activity_result"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".TipsActivity"
            android:label="Tips en Tricks"
            android:launchMode="singleInstance">
        </activity>
        <activity
            android:name=".TipsContentActivity"
            android:label="@string/title_activity_tips_content"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>
